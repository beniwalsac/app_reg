<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width = "fill_parent"
    android:layout_height = "fill_parent"
    android:scrollbars = "none"
    android:layout_weight="1"
    android:background="#168aa4">

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#168aa4"
    android:paddingTop="10dp"
    android:paddingRight="16dp"
    android:paddingLeft="16dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_login">
        <!--change paddingTop to change the
            distance from the top -->

    <EditText
        android:id="@+id/name_team"
        android:layout_width="match_parent"
        android:layout_marginTop="16dp"
        android:background="#ffffff"
        android:textAlignment="center"
        android:layout_height="52dp"
        android:hint="@string/team_name"/>
    <EditText
        android:id="@+id/name_1"
        android:layout_width="match_parent"
        android:layout_marginTop="16dp"
        android:background="#ffffff"
        android:textAlignment="center"
        android:layout_height="52dp"
        android:hint="@string/member1"/>
    <EditText
        android:id="@+id/number_1"
        android:layout_width="match_parent"
        android:layout_marginTop="16dp"
        android:background="#ffffff"
        android:textAlignment="center"
        android:layout_height="52dp"
        android:hint="@string/number1"/>
    <EditText
        android:id="@+id/name_2"
        android:layout_width="match_parent"
        android:layout_marginTop="16dp"
        android:background="#ffffff"
        android:textAlignment="center"
        android:layout_height="52dp"
        android:hint="@string/member2"/>
    <EditText
        android:id="@+id/number_2"
        android:layout_width="match_parent"
        android:layout_marginTop="16dp"
        android:background="#ffffff"
        android:textAlignment="center"
        android:layout_height="52dp"
        android:hint="@string/number2"/>
    <EditText
        android:id="@+id/name_3"
        android:layout_width="match_parent"
        android:layout_marginTop="16dp"
        android:background="#ffffff"
        android:textAlignment="center"
        android:layout_height="52dp"
        android:hint="@string/member3"/>
    <EditText
        android:id="@+id/number_3"
        android:layout_width="match_parent"
        android:layout_marginTop="16dp"
        android:background="#ffffff"
        android:textAlignment="center"
        android:layout_height="52dp"
        android:hint="@string/number3"/>
    <Button
        android:id="@+id/register_button"
        android:layout_width="300dp"
        android:layout_height="52dp"
        android:layout_gravity="center"
        android:layout_marginTop="18dp"
        android:text="@string/button_register"
        android:onClick="registerTeam"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="#1eefcc"
        android:background="#7c0d09"/>

</LinearLayout>

</ScrollView>
